<section class="container hero-section hero-section--home">
  <div class="hero-section__home-block">
    <h1 class="hero-section__home-title">
      {{ heroSection.prefix }}
      <span class="hero-section__home-brand">{{ heroSection.brand }}</span>
      {{ heroSection.suffix }}
    </h1>
    <h2 class="hero-section__home-description">{{ heroSection.description }}</h2>
    <div class="hero-section__home-content">
      <div class="hero-section__home-text-content">
        {% for stat in heroStats %} {% include "partials/hero-stats.njk" %} {%
        endfor %}
      </div>
      <div class="hero-section__buttons">
        <button class="button button--primary">
          {{ heroButtons.primary }}
        </button>
        <button class="button button--secondary">
          {{ heroButtons.secondary }}
        </button>
      </div>
    </div>
  </div>
  <picture>
    <source
      srcset="/img/{{ heroSection.img }}-1x.avif 1x, /img/{{ heroSection.img }}-2x.avif 2x"
      type="image/avif"
    />
    <source
      srcset="/img/{{ heroSection.img }}-1x.webp 1x, /img/{{ heroSection.img }}-2x.webp 2x"
      type="image/webp"
    />
    <img
      class="hero-section__home-img"
      src="/img/{{ heroSection.img }}-2x.webp"
      alt="{{ heroSection.alt }}"
      width="534"
      height="642"
      loading="lazy"
    />
  </picture>
</section>
