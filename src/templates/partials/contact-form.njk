<h3 class="form-title">{{ contactForm.title }}</h3>
<h4 class="form-description">{{ contactForm.description }}</h4>
<form
  class="{{ contactForm.class }}"
  action="{{ contactForm.action }}"
  method="{{ contactForm.method }}"
>
  <div class="form__consent">
    <p class="form__consent-text">{{ formConsent.text }}</p>
    <input
      class="visually-hidden toggle-input form__consent-toggle"
      type="{{ formConsent.type }}"
      name="{{ formConsent.name }}"
      value="{{ formConsent.value }}"
      id="{{ formConsent.id }}"
    />
    <label class="toggle-label" for="{{ formConsent.id }}"></label>
  </div>
  {% for field in formFields %}
  <div class="form__item">
    <label class="form__label" for="{{ field.id }}"> {{ field.label }} </label>
    <input
      class="input"
      type="{{ field.type }}"
      name="{{ field.name }}"
      id="{{ field.id }}"
      {%
      if
      field.placeholder
      %}
      placeholder="{{ field.placeholder }}"
      {%
      endif
      %}
      {%
      if
      field.required
      %}
      required
      {%
      endif
      %}
      {%
      if
      field.minlength
      %}
      minlength="{{ field.minlength }}"
      {%
      endif
      %}
      {%
      if
      field.max
      %}
      max="{{ field.max }}"
      {%
      endif
      %}
    />
  </div>
  {% endfor %}
  <div class="form__item">
    <p>{{ genderField.label }}</p>
    {% for option in genderField.options %}
    <input
      class="visually-hidden radio-input"
      type="radio"
      name="{{ genderField.name }}"
      value="{{ option.value }}"
      id="{{ option.id }}"
      {%
      if
      genderField.required
      and
      loop.index=""
      ="1"
      %}
      required
      {%
      endif
      %}
    />
    <label class="form__label form__label--radio" for="{{ option.id }}">
      {{ option.label }}
    </label>
    {% endfor %}
  </div>
  {% for field in phoneField %}
  <div class="form__item">
    <label class="form__label" for="{{ field.id }}"> {{ field.label }} </label>
    <input
      class="input"
      type="{{ field.type }}"
      name="{{ field.name }}"
      id="{{ field.id }}"
      placeholder="{{ field.placeholder }}"
      {%
      if
      field.required
      %}
      required
      {%
      endif
      %}
      {%
      if
      field.minlength
      %}
      minlength="{{ field.minlength }}"
      {%
      endif
      %}
      {%
      if
      field.pattern
      %}
      pattern="{{ field.pattern }}"
      {%
      endif
      %}
      {%
      if
      field.inputmode
      %}
      inputmode="{{ field.inputmode }}"
      {%
      endif
      %}
    />
  </div>
  {% endfor %} {% for field in messageField %}
  <div class="form__item">
    <label class="form__label" for="{{ field.id }}"> {{ field.label }} </label>
    <textarea
      class="input form__textarea"
      name="{{ field.name }}"
      id="{{ field.id }}"
      rows="{{ field.rows }}"
      {%
      if
      field.required
      %}
      required
      {%
      endif
      %}
    ></textarea>
  </div>
  {% endfor %} {% for field in termsField %}
  <div class="form__item form__item--checkbox">
    <input
      class="visually-hidden input-terms"
      type="checkbox"
      name="{{ field.name }}"
      value="{{ field.value }}"
      id="{{ field.id }}"
      {%
      if
      field.required
      %}
      required
      {%
      endif
      %}
    />
    <label class="form__label form__label--terms" for="{{ field.id }}">
      {{ field.text }}
      <a class="form__link" href="{{ field.link.href }}">
        {{ field.link.text }}
      </a>
    </label>
  </div>
  {% endfor %}
  <button
    class="button button--primary"
    type="{{ contactFormSubmit.type }}"
    {%
    if
    contactFormSubmit.required
    %}
    required
    {%
    endif
    %}
  >
    {{ contactFormSubmit.text }}
  </button>
</form>
