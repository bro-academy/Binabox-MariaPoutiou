<div class="subarticle-footer">
  <div class="subarticle__wrapper">
    <p class="subarticle__tags-title">
      <strong>{{ subarticleTags.title }}</strong>
    </p>
    <ul class="tag-list tag-list--subarticle">
      {% for tag in subarticleTags.item %}
      <li class="tag-list__item">
        <a class="tag-list__link" href="{{ tag.link }}">{{ tag.tag }}</a>
      </li>
      {% endfor %}
    </ul>
  </div>
  <div class="subarticle__wrapper">
    <p class="subarticle__share-title">
      <strong>{{ subarticleSocials.title }}</strong>
    </p>
    <ul class="subarticle__socials-list">
      {% for social in subarticleSocials.socials %}
      <li class="subarticle__socials-item">
        <a
          class="subarticle__socials-link"
          href="{{ social.link }}"
          target="_blank"
        >
          <img
            class="subarticle__socials-icon"
            src="{{ social.icon }}"
            alt="{{ social.alt }}"
            loading="lazy"
          />
        </a>
      </li>
      {% endfor %}
    </ul>
  </div>
</div>
