<section class="aside__block">
  <details class="aside__block-details">
    <summary class="aside__block-summary">
      <h3 class="aside__block-title">{{ asideClothing.title }}</h3>
    </summary>
    <div class="aside__block-wrapper">
      {% for option in asideClothing.options %}
      <div class="aside__block-item-catalog">
        <input
          class="visually-hidden aside__input aside__input--checkbox"
          type="{{ asideClothing.type }}"
          name="{{ asideClothing.name }}"
          value="{{ option.value }}"
          id="{{ option.id }}"
        />
        <label
          class="aside__block-label aside__block-label--checkbox"
          for="{{ option.id }}"
        >
          {{ option.label }}
        </label>
      </div>
      {% endfor %}
    </div>
  </details>
</section>
